@if (Session["User"] != null)
{
    if (Session["Rol"].ToString().Equals("1"))
    {
        @model EntityFlus.Transaction

        ViewBag.Title = "Crear movimiento";
        Layout = "~/Views/Shared/_Layout.cshtml";

        <h2>Crear movimiento</h2>


        using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                <div class="form-group">
                    <label class="control-label col-md-2">Operación</label>
                    <div class="col-md-10">
                        <select class="form-control" id="BankOperationId" name="BankOperationId">
                            <option value="1">Movimiento</option>
                        </select>
                        @Html.ValidationMessageFor(model => model.BankOperationId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">Cuenta origen</label>
                    <div class="col-md-10">
                        <input class="form-control" type="text" name="RootAccount" id="RootAccount" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">Cuenta destino</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Addressee, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Addressee, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">Concepto</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">Cantidad</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Crear" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Volver a la lista", "Index")
        </div>

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
    }
    else
    {
        <h2>Vista cliente</h2>
    }
}